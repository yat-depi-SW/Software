
<h2>Member Dashboard</h2>
<hr />
<div class="container mt-5">
    <div class="row">
       
       

        
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">All Books </h5>
                    <h2 class="card-text">@ViewBag.totalBorrowsBookTillNow</h2>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title"> Borrowed Books</h5>
                    <h2 class="card-text">@ViewBag.totalBorrowedBooks</h2>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card bg-danger text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Delayed Books </h5>
                    <h2 class="card-text">@ViewBag.delayedBook</h2>
                </div>
            </div>
        </div>


        <div class="col-md-3 mb-4">
            <div class="card @(ViewBag.score <= 50 ? "bg-danger" : "bg-primary") text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Score</h5>
                    <h2 class="card-text">@ViewBag.score %</h2>
                </div>
            </div>
        </div>

</div>
 </div>

