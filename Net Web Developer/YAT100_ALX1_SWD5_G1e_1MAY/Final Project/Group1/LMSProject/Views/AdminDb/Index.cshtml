@{
    ViewData["Title"] = "Dashboard";
}
<h2>Admin Dashboard</h2>
<hr />
<div class="container mt-5">
    <div class="row">
        <!-- Card for Total Books -->
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Total Books</h5>
                    <h2 class="card-text">@ViewBag.bookstotal</h2>
                </div>
            </div>
        </div>

        <!-- Card for Total Copies Books -->
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Total Copies </h5>
                    <h2 class="card-text">@ViewBag.bookCopiesstotal</h2>
                </div>
            </div>
        </div>

        <!-- Card for Total Author -->
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Total Authors</h5>
                    <h2 class="card-text">@ViewBag.totalauthor</h2>
                </div>
            </div>
        </div>

        <!-- Card for Total Genre -->
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Total Genre</h5>
                    <h2 class="card-text">@ViewBag.totalgenre</h2>
                </div>
            </div>
        </div>

        <!-- Card for Unborrowed Books -->
        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Unborrowed Books</h5>
                    <h2 class="card-text">@ViewBag.unBorrowedBooks</h2>
                </div>
            </div>
        </div>

        <!-- Card for Borrowed Books -->
        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Borrowed Books</h5>
                    <h2 class="card-text">@ViewBag.BorrowedBooks</h2>
                </div>
            </div>
        </div>

        <!-- Card for Delayed Books -->
        <div class="col-md-3 mb-4">
            <div class="card bg-danger text-white h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Delayed Books</h5>
                    <h2 class="card-text">@ViewBag.delayedBook</h2>
                </div>
            </div>
        </div>

        <!-- Card for Total Members -->
        <div class="col-md-3 mb-4">
            <div class="card bg-light h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <h5 class="card-title">Total Members</h5>
                    <h2 class="card-text">@ViewBag.membertotol</h2>
                </div>
            </div>
        </div>
    </div>
</div>

