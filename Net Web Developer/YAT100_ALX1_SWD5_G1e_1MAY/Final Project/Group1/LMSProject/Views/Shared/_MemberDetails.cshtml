@model MemberDetailsVM

<div class="row">
    <div class="col-md-10">
        <div class="p-3 border-start" style="border-width: 8px; border-color: #007bff; background-color: #f8f9fa; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
            <div class="d-flex align-items-center justify-content-between">
                <div class="form-group d-flex align-items-center me-4">
                    <label for="MemberNo" class="me-3">Member No:</label>
                    <input type="text" id="MemberNo" class="form-control" value="@Model.MemberNo" readonly style="width: 200px;" />
                </div>

                <div class="form-group d-flex align-items-center me-4">
                    <label for="MemberName" class="me-3">Member Name:</label>
                    <input type="text" id="MemberName" class="form-control" value="@Model.Name" readonly style="width: 200px;" />
                </div>

                <div class="form-group d-flex align-items-center">
                    <label for="MemberPhone" class="me-3">Member Phone:</label>
                    <input type="text" id="MemberPhone" class="form-control" value="@Model.Phone" readonly style="width: 200px;" />
                </div>
            </div>
        </div>
    </div>
</div>
