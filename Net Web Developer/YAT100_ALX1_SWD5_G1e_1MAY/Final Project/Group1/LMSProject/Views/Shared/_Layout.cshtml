<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - LMSProjrctAuth</title>

    <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" />
    <link rel="stylesheet" href="~/css/styles.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMSProjrctAuth.styles.css" asp-append-version="true" />

   @*  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMSProjrctAuth.styles.css" asp-append-version="true"  *@/>

</head>

<body>
    @Html.Partial("_Toast")
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>

                <div class="brand-logo d-flex align-items-center justify-content-between" style="width: 100%;">
                    <a class="mx-auto" style="flex: 1; text-align: center;">
                        <img src="~/images/logos/cityLibrary.jpg" alt="" width="50%" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">
                        <li class="nav-small-cap">
                            <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                            @* <span class="hide-menu">Home</span> *@
                            <a class="hide-menu" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         @if (User.Identity.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin") == true)
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="AdminDb" asp-action="Index">
                                        <iconify-icon icon="solar:widget-add-line-duotone"></iconify-icon>
                                        <span class="hide-menu">Admin Dashboard</span>

                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Librarian"))
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="LibrarianDB" asp-action="Index">
                                        <iconify-icon icon="solar:widget-add-line-duotone"></iconify-icon>
                                        <span class="hide-menu">Librarian Dashboard</span>

                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Member"))
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="MemberDB" asp-action="Index">
                                        <iconify-icon icon="solar:widget-add-line-duotone"></iconify-icon>
                                        <span class="hide-menu">Member Dashboard</span>

                                    </a>
                                </li>
                            }
                        }

                        
                        @if (User.Identity.IsAuthenticated == true)
                        {
                            <li>
                                <span class="sidebar-divider lg"></span>
                            </li>
                            <li class="nav-small-cap">
                                <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                                <span class="hide-menu">Main Action</span>
                            </li>
                        }

                        <!-- Main Action of Admin -->
                        @if (User.Identity.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-area="" asp-controller="BookSearch" asp-action="Index" aria-expanded="false">
                                    @* <iconify-icon icon="solar:layers-minimalistic-bold-duotone"></iconify-icon> *@
                                    <iconify-icon icon="akar-icons:search"></iconify-icon>
                                    <span class="hide-menu">Book Search</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-area="" asp-controller="Author" asp-action="Index" aria-expanded="false">
                                    <iconify-icon icon="bi:pen-fill"></iconify-icon>
                                    <span class="hide-menu">Author</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-area="" asp-controller="Genre" asp-action="Index" aria-expanded="false">
                                    <iconify-icon icon="solar:layers-minimalistic-bold-duotone"></iconify-icon>
                                    <span class="hide-menu">Genre</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-area="" asp-controller="Books" asp-action="Index" aria-expanded="false">
                                    @* <iconify-icon icon="solar:layers-minimalistic-bold-duotone"></iconify-icon> *@
                                    <iconify-icon icon="bi:book-fill"></iconify-icon>
                                    <span class="hide-menu">Books</span>
                                </a>
                            </li>
                        }
                        <!-- Main Action of Librarian -->
                        @if (User.Identity.IsAuthenticated == true && User.IsInRole("Librarian"))
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-area="" asp-controller="BookSearch" asp-action="Index" aria-expanded="false">
                                    @* <iconify-icon icon="solar:layers-minimalistic-bold-duotone"></iconify-icon> *@
                                    <iconify-icon icon="akar-icons:search"></iconify-icon>
                                    <span class="hide-menu">Book Search</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-area="" asp-controller="Borrow" asp-action="Index" aria-expanded="false">
                                    <iconify-icon icon="mdi:book-open-page-variant"></iconify-icon>
                                    <span class="hide-menu">Borrow</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-area="" asp-controller="ReturnBook" asp-action="Index" aria-expanded="false">
                                    <iconify-icon icon="bi:book-fill"></iconify-icon>
                                    <span class="hide-menu">Return Book </span>
                                </a>
                            </li>
                        }

                        <!-- Main Action of Member -->
                        @if (User.Identity.IsAuthenticated == true && User.IsInRole("Member"))
                        {
                            <li class="sidebar-item">
                                <a class="sidebar-link" class="nav-link" asp-controller="MemberDB" asp-action="Profile" aria-expanded="false">
                                    <iconify-icon icon="mdi:account-circle"></iconify-icon>
                                    <span class="hide-menu">Profile</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="MemberDB" asp-action="MemberBorrowHistory" aria-expanded="false">
                                    <iconify-icon icon="mdi:history"></iconify-icon>
                                    <span class="hide-menu">Borrow History</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="MemberDB" asp-action="MemberPenaltyHistory" aria-expanded="false">
                                    <iconify-icon icon="mdi:alert-circle"></iconify-icon>
                                    <span class="hide-menu">Penalty History</span>
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" asp-controller="MemberDB" asp-action="MemberPenaltyActive" aria-expanded="false">
                                    <iconify-icon icon="mdi:alert"></iconify-icon>
                                    <span class="hide-menu">Active Penalty</span>
                                </a>
                            </li>
                        }


                        <!---------- Auth ------------->
                        @if (!(User.Identity.IsAuthenticated == true && User.IsInRole("Member")))
                        {
                            <li>
                                <span class="sidebar-divider lg"></span>
                            </li>
                            <li class="nav-small-cap">
                                <iconify-icon icon="solar:menu-dots-linear" class="nav-small-cap-icon fs-4"></iconify-icon>
                                <span class="hide-menu">AUTH</span>
                            </li>
                        }
                       
                        @if (User.Identity.IsAuthenticated != true )
                        {
                            <li class="sidebar-item">

                                <a class="sidebar-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <iconify-icon icon="solar:login-3-line-duotone"></iconify-icon>
                                    <span class="hide-menu">Login</span>
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated == true && !User.IsInRole("Member"))
                        {
                            @if (User.IsInRole("Librarian"))
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="Account" asp-action="Register" asp-route-userType="Member" aria-expanded="false">
                                        <iconify-icon icon="solar:user-plus-rounded-line-duotone"></iconify-icon>
                                        <span class="hide-menu">Register Member</span>
                                    </a>
                                </li>
                                <li>
                                    <span class="sidebar-divider lg"></span>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="Account" asp-action="Register" asp-route-userType="Librarian" aria-expanded="false">
                                        <iconify-icon icon="solar:user-plus-rounded-line-duotone"></iconify-icon>
                                        <span class="hide-menu">Register Librarian</span>
                                    </a>
                                </li>
                                <li>
                                    <span class="sidebar-divider lg"></span>
                                </li>
                            }
                            
                        }
                      
                    </ul>
                    
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler " id="headerCollapse" href="javascript:void(0)">
                                <i class="ti ti-menu-2"></i>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Welcome @User.Identity.Name</span>
                            </li>
                        }                       
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link " href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <img src="~/images/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">
                                        @if (User.Identity.IsAuthenticated == true && User.IsInRole("Member"))
                                        {
                                            <a asp-controller="MemberDB" asp-action="Profile" class="d-flex align-items-center gap-2 dropdown-item">
                                                <i class="ti ti-user fs-6"></i>
                                                <p class="mb-0 fs-3">My Profile</p>
                                            </a>
                                        }
                                       

                                        @* <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-mail fs-6"></i>
                                            <p class="mb-0 fs-3">My Account</p>
                                        </a>
                                        <a href="javascript:void(0)" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-list-check fs-6"></i>
                                            <p class="mb-0 fs-3">My Task</p>
                                        </a> *@
                                        @if (User.Identity.IsAuthenticated == true)
                                        {
                                            <form asp-action="SignOut" asp-controller="Account" method="post">
                                                @Html.AntiForgeryToken() <!-- Protect from CSRF attacks -->

                                                <button type="submit" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</button>
                                            </form>
                                        }
                                        @if (User.Identity.IsAuthenticated == false)
                                        {
                                            <a asp-area="" asp-controller="Account" asp-action="Login" class="d-flex align-items-center gap-2 dropdown-item">
                                                <iconify-icon icon="solar:login-3-line-duotone"></iconify-icon>

                                                <p class="mb-0 fs-3">Login</p>
                                            </a>

                                        }
                                        
                                        

                                        @* <a href="./authentication-login.html" class="btn btn-outline-primary mx-3 mt-2 d-block">Logout</a> *@
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!--  Header End -->
            <div class="body-wrapper-inner">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-body">
                           @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/lib/simplebar/dist/simplebar.js"></script>
    <!-- solar icons -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>