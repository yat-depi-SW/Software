@model List<Product>

@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<div style="background-color: #f5f5f5; height:80vh;">
    <div class="container text-dark py-5">
        <div class="row align-items-center g-5 padding-top:20px">
            <div class="col-md-6">
                <h1 class="mb-4 display-4" style="font-family: 'Roboto', sans-serif; font-weight: 700; color: #ff5733;">Welcome to MobiStore</h1>
                <p style="font-size: 1.2rem; line-height: 1.6; color: #555;">
                    Discover a wide range of cutting-edge electronics from top brands at unbeatable prices. Your one-stop shop for quality and innovation.
                </p>

                <a class="btn btn-lg" href="@Url.Action("Index", "Store")" style="background-color: #ff5733; color: #fff; font-weight: 600;">Shop Now</a>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/hero1.png" class="img-fluid" alt="hero" style="border-radius: 10px; box-shadow: none;">
            </div>
        </div>
    </div>
</div>

<div class="bg-light">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Newest Products</h2>

        <div class="row mb-5 g-3">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="rounded border shadow p-3 text-center h-100">
                        <img src="/products/@product.ImageFileName" class="img-fluid" alt="..."
                             style="height: 180px; object-fit: contain" />
                        <hr />
                        <h5 class="py-2">@product.Name</h5>
                        <p>
                            Brand: @product.Brand.Name, Category: @product.Category.Name
                        </p>
                        <h4 class="mb-3">@(product.Price)$</h4>
                        <a class="btn btn-primary btn-sm mb-2" asp-controller="Store"
                           asp-action="Details" asp-route-id="@product.Id" role="button">Details</a>
                        <button type="button" class="btn btn-warning btn-sm mb-2" onclick="addToCart(this, @product.Id)">
                            Add to Cart <i class="bi bi-cart4"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
